{
  "compilerOptions": {
    "target": "esnext",
    "esModuleInterop": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "baseUrl": "src",
    "paths": {
      "components/*": ["./components/*"],
      "screens/*": ["./screens/*"],
      "store/*": ["./store/*"],
      "test-utils": ["./utils/test-utils"],
      "utils/*": ["./utils/*"]
    },
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    ".expo-shared",
    ".expo",
    ".jest",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.test.tsx.snap"
  ]
}
